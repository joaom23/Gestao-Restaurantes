@model IEnumerable<Projeto_Lab.Models.Notificaçao>

@{
    ViewData["Title"] = "VerNotis";
    Layout = "_Layout";
}

<h1>Suas Notificações</h1>

@if (Model.Count() > 0)
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mensagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                <a class="butoes" asp-controller="Home" asp-action="VerPrato" asp-route-id="@item.IdR">@Html.DisplayFor(modelItem => item.Mensagem)</a>
</td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                <a class="btn btn-danger" asp-action="DeleteNotis" asp-route-id="@item.IdNoti">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
}
else
{
    <p>Não tem notificãções</p>
}
