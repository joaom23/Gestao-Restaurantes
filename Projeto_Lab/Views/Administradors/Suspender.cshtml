@model Projeto_Lab.Models.Utilizador

@{
    ViewData["Title"] = "Suspende";
}

<h1>Suspender Utilizador</h1>

<h6>Nome: @Html.DisplayFor(model => model.Username)</h6>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Suspende">
            <div class="form-group">
                <label class="control-label">Motivo</label>
                <input name="Motivo" role="textbox" class="form-control" />
                <span name="Motivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Suspender" asp-route-id="@Model.Id" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Suspensoes">Cancelar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
