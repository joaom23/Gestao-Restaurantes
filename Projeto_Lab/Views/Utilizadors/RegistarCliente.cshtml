@model Projeto_Lab.Models.Cliente

@{
    ViewData["Title"] = "RegistarCliente";
}

<h1>Registar Cliente</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegistarCliente">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCNavigation.Email" class="control-label"></label>
                <input name="Email" class="form-control" />
                <span asp-validation-for="IdCNavigation.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCNavigation.Username" class="control-label"></label>
                <input name="Username" class="form-control" />
                <span asp-validation-for="IdCNavigation.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCNavigation.Pass" class="control-label"></label>
                <input  type="password" name="Pass" class="form-control" />
                <span asp-validation-for="IdCNavigation.Pass" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Registar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
